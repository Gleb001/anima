{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "outDir": "./anima/lib", 
    "downlevelIteration": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipDefaultLibCheck": true,
    "skipLibCheck": true 
  },
  "exclude": [
    "node_modules",
    "**/tests/**",
  ],
  "include": [
    "src"
  ]
}